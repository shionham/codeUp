package codeUp;

import java.util.Scanner;

public class code80 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("정수를 입력하세요");

        int n = sc.nextInt();
        int sum = 0;            // 합르 0으로 설정
        int i = 0;              // i 는 0으로 설정

        while (sum < n) {       // while
            i++;                // 1부터 증가
            sum += i;           // 누적 합
        }

        System.out.println(i);
    }
}
